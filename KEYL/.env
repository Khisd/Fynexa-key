// server.js (Environment Variables)
const express = require('express');
const cors = require('cors');
const axios = require('axios');

const app = express();
const PORT = process.env.PORT || 3000;

// Optional: Read from .env file (but don't commit it!)
let GITHUB_TOKEN = process.env.GITHUB_TOKEN;

app.use(cors());
app.use(express.json());
app.use(express.static('.'));

// Jika tidak ada token di env, minta dari user
if (!GITHUB_TOKEN) {
    console.log('⚠️  No token in environment variables');
    console.log('   Token will be requested from user');
}

// API endpoint untuk set token
app.post('/api/set-token', (req, res) => {
    const { token } = req.body;
    
    if (token) {
        GITHUB_TOKEN = token;
        res.json({ success: true, message: 'Token set' });
    } else {
        res.status(400).json({ success: false, message: 'Token required' });
    }
});

// Gunakan GITHUB_TOKEN di semua requests
